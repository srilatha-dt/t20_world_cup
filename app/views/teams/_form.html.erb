<div class="container">
  

  <div class="row justify-content-center">
  <%= render 'shared/errors' %>
    <%= form_with scope: :team, url: teams_path, local: true do |f| %>
      <div class="form-group row">
        
            <%= f.label :nmae, class: "col-2 col-form-label"%>
            <div class="col-10">
            <%= f.text_field :name, class: "form-control"  %>
            </div>
      </div>

      <div class="form-group row">
        
            <%= f.label :country, class: "col-2 col-form-label"%>
            <div class="col-10">
            <%= f.text_field :country, class: "form-control"  %>
            </div>
      </div>

      <div class="form-group row">
        
            <%= f.label :founded, class: "col-2 col-form-label"%>
            <div class="col-10">
            <%= f.number_field :founded, class: "form-control"  %>
            </div>
      </div>

      <div class="form-group row">
          <%= f.label :description, class: "col-2 col-form-label" %>
          <div class="col-10">
          <%= f.text_area :description, rows:10, class: "form-control" %>
          </div>
      </div>

      <div class="form-group row">
        <p><%= f.submit %></P>
      </div>
    
    <% end %>
    <%= link_to 'Cancel and return to teams list', teams_path %>
  </div>
</div>