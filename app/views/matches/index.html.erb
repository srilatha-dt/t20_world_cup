<h1>Matches list</h1>

<table>
    <thead>
        <tr>
            <th>location</th>
            <th>date</th>
            <th>home_team</th>
            <th>away_team</th>
            <th colspan="3">Actions</th>
        </tr>
    </thead>

    <tbody>
        <% @matches.each do |match| %>
        <tr>
            <td><%= match.location%></td>
            <td><%= match.date%></td>
            <td><%= match.home_teams.name%></td>
            <td><%= match.away_teams.name%></td>
            <td><%= link_to "show", match_path(match) %></td>
            <td><%= link_to "Edit", edit_match_path(match) %></td>
            <td><%= button_to "Delete", match_path(match), method: :delete, onclick: "return confirm('Are you sure?');" %> </td>
        </tr>
        <% end %>
    </tbody>
</table>


<td><%= link_to "Add New match", new_match_path %></td>
