<div class="container">
  

  <div class="row justify-content-center">
  
    <%= form_with scope: :match, url: matches_path, local: true do |f| %>
      <div class="form-group row">
        
            <%= f.label :location, class: "col-2 col-form-label"%>
            <div class="col-10">
            <%= f.text_field :location, class: "form-control"  %>
            </div>
      </div>

      <div class="form-group row">
        
            <%= f.label :date, class: "col-2 col-form-label"%>
            <div class="col-10">
            <%= f.date_field :date, class: "form-control"  %>
            </div>
      </div>

      <div class="form-group row">
        
            <%= f.label :home_team_id, class: "col-2 col-form-label"%>
            <div class="col-10">
            <%= f.text_field :home_team_id, class: "form-control"  %>
            </div>
      </div>

      <div class="form-group row">
          <%= f.label :away_team_id, class: "col-2 col-form-label" %>
          <div class="col-10">
          <%= f.text_field :away_team_id, class: "form-control" %>
          </div>
      </div>

      <div class="form-group row">
        <p><%= f.submit %></P>
      </div>
    
    <% end %>
    <%= link_to 'Cancel and return to matches list', matches_path %>
  </div>
</div>